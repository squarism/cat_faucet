<!DOCTYPE html>
<html>
<head>
  <title>Smarthome</title>
  <%= stylesheet_link_tag 'smarthome' %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

	<div id="main">

		<div id="topNav">
			<%= link_to "Home", :root %>
			<%= link_to "Sinks", sinks_path %>
			<%= link_to "Sensors", sensors_path %>
		</div>

		<% if notice %>
			<p id="notice"><%= notice %></p>
		<% end %>

		<%= yield %>
	</div>

</body>
</html>
